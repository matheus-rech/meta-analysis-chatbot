# Meta-Analysis Chatbot Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# API Keys (at least one required)
# ============================================

# OpenAI API Key for GPT models
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key for Claude models
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================
# Application Settings
# ============================================

# Server Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860

# Session Management
SESSIONS_DIR=./sessions
MAX_SESSIONS=100
SESSION_TIMEOUT_HOURS=24

# R Script Configuration
RSCRIPT_BIN=Rscript
RSCRIPT_TIMEOUT_SEC=300
DEBUG_R=0

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=.csv,.xlsx,.xls,.pdf,.png,.jpg,.jpeg,.gif

# ============================================
# Database Configuration (Optional)
# ============================================

# PostgreSQL for session storage
DATABASE_URL=postgresql://metauser:metapass@localhost:5432/meta_analysis
DB_USER=metauser
DB_PASSWORD=metapass

# Redis for caching
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# ============================================
# Security Settings
# ============================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session Security
SESSION_SECRET_KEY=change-this-to-a-random-secret-key
SECURE_COOKIES=false  # Set to true in production with HTTPS

# ============================================
# Monitoring & Logging
# ============================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Error Tracking (Optional)
SENTRY_DSN=

# ============================================
# Feature Flags
# ============================================

# Enable experimental features
ENABLE_NETWORK_META_ANALYSIS=false
ENABLE_BAYESIAN_ANALYSIS=false
ENABLE_AI_DATA_EXTRACTION=true
ENABLE_COLLABORATIVE_SESSIONS=false

# UI Features
ENABLE_DARK_MODE=true
ENABLE_KEYBOARD_SHORTCUTS=true
ENABLE_EXPORT_TEMPLATES=true

# ============================================
# External Services (Optional)
# ============================================

# PubMed API
NCBI_API_KEY=
PUBMED_EMAIL=your-email@domain.com

# ClinicalTrials.gov
CLINICALTRIALS_API_KEY=

# Cloud Storage (S3-compatible)
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=
S3_REGION=us-east-1

# ============================================
# Development Settings
# ============================================

# Development mode
DEBUG=false
DEV_MODE=false
HOT_RELOAD=false

# Testing
TEST_MODE=false
USE_MOCK_LLM=false
MOCK_R_RESPONSES=false